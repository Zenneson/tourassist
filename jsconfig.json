{
	"compilerOptions": {
		"baseUrl": "/app",
		"paths": {
			"@libs/*": [
				"libs/*"
			],
			"@mainComps/*": [
				"mainComps/*"
			]
		},
		"target": "es6",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
	},
	"include": [
		"next-env.d.ts",
		".wdyr/wdyr-disable.js",
		".wdyr/wdyr-output.js",
		"next.config.js",
		"**/*.js",
		"**/*.jsx",
	],
	"exclude": [
		"node_modules"
	]
}